{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "bleed": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "${city}",
          "weight": "Bolder",
          "size": "Medium",
          "horizontalAlignment": "Center",
          "color": "Light"
        }
      ],
      "backgroundImage": {
        "url": "${backgroundImageUrl}",
        "fillMode": "cover"
      }
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Sıradaki Vakit",
          "isSubtle": true,
          "horizontalAlignment": "Center",
          "spacing": "Medium",
          "size": "Small"
        },
        {
          "type": "TextBlock",
          "text": "${nextPrayerName}",
          "weight": "ExtraLarge",
          "size": "ExtraLarge",
          "color": "Accent",
          "horizontalAlignment": "Center"
        },
        {
          "type": "TextBlock",
          "text": "${nextPrayerTime}",
          "weight": "Bolder",
          "size": "Large",
          "horizontalAlignment": "Center",
          "spacing": "Small"
        },
        {
            "type": "TextBlock",
            "text": "Tarih: ${date}",
            "isSubtle": true,
            "horizontalAlignment": "Center",
            "spacing": "Large",
            "size": "Small"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Uygulamayı Aç",
      "url": "https://cagrivakti.com.tr"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}